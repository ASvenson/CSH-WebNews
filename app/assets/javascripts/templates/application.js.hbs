{{! new user or old user greeting }}

<div id="toolbar">
  <div class="user_info">
    {{ avatar currentUser.email 28 }}
    <a title="Show all my posts" href="#">
      <span class="real_name">{{currentUser.displayName}}</span>
      <span class="username">({{currentUser.username}})</span>
    </a>
    {{#if currentUser.isAdmin}}<span class="role_badge">Admin</span>{{/if}}
    <span class="buttons">
      <a id="settings_button" class="button" title="Settings" href="#">{{icon 'cog'}}</a>
      <a id="about_button" class="button blue" title="About WebNews" href="#">{{icon 'question'}}</a>
    </span>
  </div>
  <div class="buttons">
    <h1><a href="#!/home">WebNews</a></h1>
    <a id="home_button" class="button" href="#">{{icon 'home'}}</a>
    <a id="search_button" class="button" href="#">{{icon 'search'}} Search</a>
    <a id="starred_button" class="button" href="#">{{icon 'star'}} Starred</a>
    <a id="next_unread" class="button" href="#">{{icon 'arrow-right'}} Next Unread</a>
    <a id="mark_all_read_button" class="button mark_read" data-scope="all" href="#"
      data-confirm="Really mark all posts read?">{{icon 'check'}} Read All</a>
    <a class="button yellow resume_draft" href="#">{{icon 'chevron-down'}} Resume Draft</a>
  </div>
</div>

<div id="groups_list">
  {{ render 'newsgroups' }}
</div>

<div id="group_view">
  {{! dashboard }}
</div>

<div id="post_view">
</div>

