<ul>
  <% @newsgroups.each do |group| %>
    <% unread = group.unread_for_user(@current_user) %>
    <li class="<%= unread[:hclass] %><%= group.posting_allowed? ? '' : ' read_only' %>"
        data-name="<%= group.name %>" data-unread="<%= unread[:count] %>">
      <a href="#!<%= posts_path(group.name) %>">
        <%= group.name %><% if unread[:count] > 0 %><span class="unread_count"> (<%= unread[:count] %>)<% end %>
      </a>
    </li>
  <% end %>
</ul>
