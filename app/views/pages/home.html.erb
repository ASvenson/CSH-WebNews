<div id="toolbar">
  <div id="user_info">
    Posting as <span class="real_name"><%= @current_user.real_name %></span>
    <span class="username">(<%= @current_user.username %>)</span>
    <a class="button" href="#?/preferences">Settings</a>
  </div>
  <div id="toolbar_buttons">
    <h1>CSH WebNews</h1>
    <a class="button" href="#!/home">Home</a>
    <a class="button" href="#">Next Unread</a>
    <a class="button" href="#">Search News</a>
  </div>
</div>

<div id="groups_list">
  <h2>Newsgroups</h2>
  <nav>
    <ul>
      <% @newsgroups.each do |group| %>
        <li data-name="<%= group.name %>"><a href="#!<%= posts_path(group.name) %>"><%= group.name %></a></li>
      <% end %>
    </ul>
  </nav>
</div>

<div id="group_view">
  <%= render('new_user') if @new_user %>
</div>

<div id="post_view">
</div>
