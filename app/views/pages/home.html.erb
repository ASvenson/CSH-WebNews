<div id="toolbar">
  <div id="user_info">
    <% if @current_user.is_admin? %><span class="role_badge">Admin</span><% end %>
    <span class="real_name"><%= @current_user.real_name %></span>
    <span class="username">(<%= @current_user.username %>)</span>
    <a id="settings_button" class="button" href="#?<%= edit_user_path %>">Settings</a>
    <a id="about_button" class="button blue" href="#?/about">?</a>
  </div>
  <div class="buttons">
    <h1>CSH WebNews</h1>
    <a id="home_button" class="button" href="#!/home">Home</a>
    <a id="search_button" class="button" href="#?<%= search_entry_path %>">Search</a>
    <a id="next_unread" class="button" href="<%= next_unread_href %>">Next Unread</a>
    <a id="mark_all_read_button" class="button mark_read" data-scope="all" href="#"
      data-confirm="Really mark all posts read?">Mark All Read</a>
    <a class="button yellow resume_draft" href="#">Resume Draft</a>
  </div>
</div>

<div id="groups_list">
  <h2>Newsgroups</h2>
  <%= render 'shared/sync_warning' if @show_sync_warning %>
  <nav>
    <%= render 'newsgroups/index' %>
  </nav>
</div>

<div id="group_view">
  <%= render 'shared/spinner' %>
  <% if @new_user %><div id="startup_msg" data-action="new_user"></div><% end %>
  <% if @old_user %><div id="startup_msg" data-action="old_user"></div><% end %>
</div>

<div id="post_view">
</div>

<div id="loader" class="hidden">
  <%= render 'shared/spinner' %>
  <%= render 'shared/overlay' %>
  <%= render 'shared/ajax_error' %>
</div>

<div id="external_links">
  <%= render 'external_links' %>
</div>
